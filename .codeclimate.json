{
    "version": 2,
    "checks": {
        "argument-count": {
            "enabled": false
        },
        "complex-logic": {
            "enabled": false
        },
        "file-lines": {
            "enabled": false
        },
        "method-complexity": {
            "enabled": false
        },
        "method-count": {
            "enabled": false
        },
        "method-lines": {
            "enabled": false
        },
        "nested-control-flow": {
            "enabled": false
        },
        "return-statements": {
            "enabled": false
        },
        "similar-code": {
            "enabled": false
        },
        "identical-code": {
            "enabled": false
        }
    },
    "plugins": {
        "phpcodesniffer": {
            "enabled": true,
            "config": {
                "file_extensions": "php,inc,lib",
                "standard": ".phpcs.xml"
            }
        },
        "phpmd": {
            "enabled": true,
            "config": {
                "file_extensions": "php,inc,lib",
                "rulesets": ".phpmd.xml"
            }
        }
    }
}
